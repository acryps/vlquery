{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Publish @dev to npm",
			"detail": "Publish vlquery@dev to npm",
			"type": "shell",
			"command": "npm version ${input:version-type} && npm publish --tag dev",
			"problemMatcher": []
		},
		{
			"label": "Publish @latest to npm",
			"detail": "Publish vlquery@latest to npm",
			"type": "shell",
			"command": "npm version ${input:version-type} && npm publish",
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "version-type",
			"description": "Version Type",
			"default": "path",
			"type": "pickString",
			"options": [
				"patch",
				"minor",
				"major"
			]
		}
	]
}